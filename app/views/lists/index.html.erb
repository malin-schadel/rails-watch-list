<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'cinema.jpg' %>);">
  <div class="container">
    <h1>Welcome to Watchlist</h1>
    <%= link_to 'Add List', new_list_path, class: 'btn btn-flat' %>
  </div>
</div>

<div class="container">

  <div class="cards">
    <% @lists.each do |l| %>
      <%= link_to list_path(l) do %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path "bg_card.jpg" %>)">
          <h3><%= l.name %></h3>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
